{% extends 'base.html.twig' %}

{% block body %}
    <h1>Offre</h1>

    <table>
        <tbody>
            <tr>
                <th>Idoffre</th>
                <td>{{ offre.idOffre }}</td>
            </tr>
            <tr>
                <th>Titleoffre</th>
                <td>{{ offre.titleOffre }}</td>
            </tr>
            <tr>
                <th>Descriptionoffre</th>
                <td>{{ offre.descriptionOffre }}</td>
            </tr>
            <tr>
                <th>Experienceoffre</th>
                <td>{{ offre.experienceOffre }}</td>
            </tr>
            <tr>
                <th>Salaireoffre</th>
                <td>{{ offre.salaireOffre }}</td>
            </tr>
            <tr>
                <th>Technologiesoffre</th>
                <td>{{ offre.technologiesOffre }}</td>
            </tr>
            <tr>
                <th>Langageoffre</th>
                <td>{{ offre.langageOffre }}</td>
            </tr>
            <tr>
                <th>Locationoffre</th>
                <td>{{ offre.LocationOffre }}</td>
            </tr>
            <tr>
                <th>Dateoffre</th>
                <td>{% if offre.dateOffre %}{{ offre.dateOffre|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Typeoffre</th>
                <td>{{ offre.typeOffre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('offre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('offre_edit', { 'idOffre': offre.idOffre }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
